@code {
    private bool isMenuOpen = false;

    private void ToggleMenu()
    {
        isMenuOpen = !isMenuOpen;
    }

    private void CloseMenuOnClick()
    {
        if (isMenuOpen)
            isMenuOpen = false;
    }
}

<style>
    .navbar {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
