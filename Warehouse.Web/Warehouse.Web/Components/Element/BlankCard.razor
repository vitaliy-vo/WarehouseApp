@using System.Security.Claims

<div class="card" style="width: 18rem; margin: 10px 10px 10px 0px;">
    <div class="card-body">
        <img src="/images/@Blank.PathPhoto"
             class="card-img-top"
             alt="@Blank.NameValue">
        <h5 class="card-title">@Blank.NameValue</h5>
        <p class="card-text">@Blank.Article-@Blank.Count шт.</p>
        <AuthorizeView Roles="User1,User2,Admin">
             <Authorized>
        <a href="/@Blank.Id" class="btn btn-primary">Card link</a>
        </Authorized>
        </AuthorizeView>
     </div>
</div>

@code {
    [Inject]
    public AuthenticationStateProvider AuthenticationStateProvider { get; set; }

    [Parameter]
    public BlankOutPutModel Blank{ get; set; }

}
